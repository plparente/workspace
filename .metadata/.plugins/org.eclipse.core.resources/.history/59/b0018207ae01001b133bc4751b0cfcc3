package variaveis;

public class Variavel {

		// Variavel é um espaço temporário na memória RAM onde
		// você armazena UM dado.
	public static void main(String[] args) {
		// Sintaxe para criar variavel
		// <tipo do dado>  <nome da variavel>;
		
		/* Tipos de Dados:
		 * A- ) Numerico: o dado que será utilizado em uma operação matemática e/ou 
		 * for um dado critico para consulta.
		 * 00010-009 => 1 (subtrai).
		 * B- ) Alfanumérico: não é utilizado para operações matemáticas.
		 * CEP = 00010-009 => 00010-009
		 * 
		 * 
		 * 
		 * 
			 */
		String nome = "";
		int idade = 0;
		

	}

}
