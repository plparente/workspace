package variaveis;

public class Primitivos {

	public static void main(String[] args) {
		/* Tipos primitivos em ordem hierarquica:
		 * boolean => tipo lógico (true ou false)
		 * char => armazena UM caracter
		 * byte => menor entre inteiros 
		 * short => numeros inteiros
		 * int => numeros inteiros (padrão)
		 * long => maior entre os inteiros
		 * float => menor precisão nas cadas decimais
		 * double => maior precisão nas cadas decimais (padrão)
		 */
		/*
		 * Cast: é uma conversão entre tipos compativeis, apenas
		 * estão com hierarquia diferentes
		 */

		boolean gravida=true;
		char sexo='M';
		byte golsVisitante=0;
		short quantidadeCestas=0;
		long cpf=0;
		float nota=0;
		double valorLitroCombustivel=0;
		
		float desconto = 500 * (float)0.9;
		cpf = (long) 1.5;
		
		
	}

}
